
CC=clang++
LDFLAGS=-std=c++0x -framework CoreServices
CFLAGS=-c -pthread

all: main

main: main.o FSEventsService.o RunLoop.o Lock.o NativeInterface.o Queue.o
	$(CC) $(LDFLAGS) main.o FSEventsService.o RunLoop.o Lock.o NativeInterface.o Queue.o -o run

main.o: includes/NativeInterface.h
	$(CC) $(LDFLAGS) $(CFLAGS) src/main.cpp

NativeInterface.o: includes/NativeInterface.h includes/osx/FSEventsService.h
	$(CC) $(LDFLAGS) $(CFLAGS) src/NativeInterface.cpp

Queue.o: includes/Types.h includes/Queue.h
	$(CC) $(LDFLAGS) $(CFLAGS) src/Queue.cpp

RunLoop.o: includes/osx/FSEventsService.h includes/osx/RunLoop.h includes/Lock.h
	$(CC) $(LDFLAGS) $(CFLAGS) src/osx/RunLoop.cpp

Lock.o: includes/Lock.h
	$(CC) $(LDFLAGS) $(CFLAGS) src/Lock.cpp

FSEventsService.o: includes/osx/RunLoop.h includes/osx/FSEventsService.h includes/Queue.h includes/Types.h
	$(CC) $(LDFLAGS) $(CFLAGS) src/osx/FSEventsService.cpp

clean:
	rm *.o run
